@* ════════════════════════════════════════════════════
   Views/Platillos/Detalle.cshtml
   ════════════════════════════════════════════════════ *@
@model Proyecto_Restaurante.Models.Platillo
@{
    ViewData["Title"] = "Detalle del Platillo";
}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImagenUrl" class="img-fluid rounded" alt="@Model.Nombre"
                 style="width:100%;height:400px;object-fit:cover">
        </div>
        <div class="col-md-6">
            <h1>@Model.Nombre</h1>
            <span class="badge bg-secondary mb-3">@Model.Categoria</span>
            <h3 class="text-success mb-4">$@Model.Precio.ToString("N2")</h3>
            <h5>Descripción</h5>
            <p class="lead">@Model.Descripcion</p>
            <p><strong>Restaurante:</strong> @Model.Restaurante?.Nombre</p>
            <hr>
            <div class="d-flex gap-2 mt-4">
                <form asp-action="AgregarAlCarrito" method="post" class="flex-fill">
                    <input type="hidden" name="id" value="@Model.PlatilloId" />
                    <button type="submit" class="btn btn-success btn-lg w-100">➕ Agregar al Carrito</button>
                </form>
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg">← Volver</a>
            </div>
        </div>
    </div>
</div>


