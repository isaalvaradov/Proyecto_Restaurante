<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Restaurante</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Restaurante.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">🍽️ Restaurante</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @{
                            var usuario = Context.Session.GetString("Usuario");
                            var rol = Context.Session.GetString("Rol");
                        }

                        @if (usuario != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Platillos" asp-action="Index">🍴 Menú</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Platillos" asp-action="Carrito">🛒 Carrito</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Restaurantes" asp-action="Index">Restaurantes</a>
                            </li>

                            @if (rol == "Administrador")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="Roles" asp-action="Index">⚙️ Roles</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="Platillos" asp-action="Create">➕ Nuevo Platillo</a>
                                </li>
                            }

                            <li class="nav-item ms-3">
                                <span class="nav-link text-warning">👤 @usuario (@rol)</span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-danger" asp-controller="Account" asp-action="Logout">Salir</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Account" asp-action="Login">Iniciar sesión</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Account" asp-action="Register">Registrarse</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy; 2026 - Restaurante App
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>